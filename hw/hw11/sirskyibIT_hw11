# Task 1


def check_even_or_odd(age):
    if age < 0:
        raise ValueError("Age cannot be negative")
    if age % 2 == 0:
        return "even"
    else:
        return "odd"

try:
    age = int(input("Please enter your age: "))
    result = check_even_or_odd(age)
    print(f"Your age is {result}.")
except ValueError as error:
    print(f"Error: {error}")


# Task 2

def day_checking(number):
    if number == 1:
        return "Monday"
    elif number == 2:
        return "Tuesday"
    elif number == 3:
        return "Wednesday"
    elif number == 4:
        return "Thursday"
    elif number == 5:
        return "Friday"
    elif number == 6:
        return "Saturday"
    elif number == 7:
        return "Sunday"
    else:
        raise ValueError("Number cannot be less than 1 or more than 7.")

try:
    number = int(input("Enter your day_number: "))
    result = day_checking(number)
    print(f"Today is {result}.")
except ValueError as error:
    print(f"Error: {error}")
